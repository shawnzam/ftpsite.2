<%- model_class = ProjectFile -%>
<div class="page-header">
  <h1><%=t '.title', :default => ProjectFile %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @project_file.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:folder) %></dt>
      <dd><pre class="prettyprint"><%= @project_file.folder %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              project_files_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_project_file_path(@project_file), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              project_file_path(@project_file),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

